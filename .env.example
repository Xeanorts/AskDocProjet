# ==============================================
# Project Name Configuration
# ==============================================

# ============== IMAP Configuration (Reception) ==============
# Email account to monitor for incoming emails
IMAP_HOST=ssl0.ovh.net
IMAP_PORT=993
IMAP_USER=your-email@domain.com
IMAP_PASSWORD=your-password
IMAP_MAILBOX=INBOX
IMAP_SYNC_INTERVAL=30000
IMAP_MARK_AS_READ=true
# IMAP_REJECT_UNAUTHORIZED=true   # Uncomment for strict SSL validation (default: false for compatibility)

# ============== SMTP Configuration (Sending) ==============
# Email account to send responses from
SMTP_HOST=smtp.mail.ovh.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-password
SMTP_FROM_EMAIL=your-email@domain.com
SMTP_FROM_NAME=Assistant IA
SMTP_REJECT_UNAUTHORIZED=true   # Set to 'false' for self-signed certificates (Mailcow, etc.)

# ============== Mistral AI Configuration ==============
# Mistral API key for Document Q&A (REQUIRED)
# Get your key at: https://console.mistral.ai/api-keys
MISTRAL_API_KEY=your-mistral-api-key

# Optional: API timeout in milliseconds (default: 120000)
MISTRAL_TIMEOUT_MS=120000

# ============== Storage Configuration ==============
# Where emails and processed data are stored
STORAGE_PATH=./storage
IA_INPUT_DIR=00_mail_in
IA_OUTPUT_DIR=10_ia_requests

# ============== Timeouts ==============
EMAIL_SEND_TIMEOUT_MS=30000
LLM_TIMEOUT_MS=120000

# ============== Logging ==============
LOG_LEVEL=info
NODE_ENV=production

# ============== Test Mode ==============
# Set to true to test without calling Mistral API
DRY_RUN=false
