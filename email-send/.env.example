# Module Email Send - Configuration

# Configuration SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false                       # true pour port 465, false pour port 587
SMTP_REJECT_UNAUTHORIZED=true           # false pour certificats auto-signes (Mailcow)
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-here

# Configuration email
EMAIL_FROM=your-email@example.com
EMAIL_FROM_NAME=Assistant IA
EMAIL_SUBJECT=Votre reponse IA est prete

# Polling et retry
EMAIL_POLLING_INTERVAL_MS=60000         # Intervalle de polling (60 secondes)
EMAIL_RETRY_COUNT=3                     # Nombre de tentatives d'envoi
EMAIL_RETRY_DELAY_MS=2000               # Delai entre les retries (2 secondes)
